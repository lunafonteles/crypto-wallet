<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description, style:"display: block" %>
    <%= form.text_field :description, class:"form-control"%>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :acronym, style:"display: block" %>
    <%= form.text_field :acronym, class:"form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :url_image, style:"display: block" %>
    <%= form.text_field :url_image, class:"form-control" %>
    <% if coin.url_image.present? %>
      <%= image_tag coin.url_image, size: "20x20" %>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :minning_type, style:"display: block" %>
    <%= form.select("minning_type_id", @minning_type_option, {include_blank: t("select")}, class:"form-control") %>
  </div>
  <br>
  <div>
    <%= form.submit nil, class: "btn btn-primary"%>
  </div>
<% end %>
