<p style="color: green"><%= notice %></p>

<h1><%= t('coins') %></h1>
<%# <h1><%= "#{Coin.model_name.human(count:2)}" %>

<table class="table">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, heigth: 25 %></td>
        <td><%= link_to t('show'), coin %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('add'), new_coin_path, class: "btn btn-primary" %>

