<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>
<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
    </tr>
    </thead>
<tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td><%= image_tag coin.url_image, width: 25, heigth: 25 %></td>
      <td><%= link_to "Mostrar", coin %></td>
    </tr>
  <% end %>

<%= link_to "Adicionar nova moeda", new_coin_path %>
</tbody>
</table>
