<p style="color: green"><%= notice %></p>


<form>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled:"true" %>
  </div>
  <br>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class:"form-control", disabled:"true" %>
  </div>
  <br>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:url_image) %>
    <%= text_field_tag nil, @coin.url_image, class:"form-control", disabled:"true" %>
  </div>
  <br>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:minning_type) %>
    <%= text_field_tag nil, @coin.minning_type.description, class:"form-control", disabled:"true" %>
  </div>
</form>

<br>

<div>
  <%= link_to t('edit'), edit_coin_path(@coin), class:"btn btn-primary" %> 
  <%= link_to t('back'), coins_path, class:"btn btn-primary" %>
  
  <%= button_to t('delete'), @coin, method: :delete, data: {confirm: t('confirm'), class:"btn btn-primary"} %>
</div>
